# =============================================================================
# FACELESS CONTENT PIPELINE - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control!
# =============================================================================

# =============================================================================
# AZURE OPENAI CONFIGURATION
# =============================================================================
# Your Azure OpenAI resource endpoint (must end with /)
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY=your-api-key-here

# =============================================================================
# AZURE OPENAI DEPLOYMENTS
# =============================================================================
# Image Generation Model (e.g., dall-e-3, gpt-image-1)
AZURE_OPENAI_IMAGE_DEPLOYMENT=gpt-image-1
AZURE_OPENAI_IMAGE_API_VERSION=2025-04-01-preview

# Chat/Completion Model for Script Enhancement (e.g., gpt-4o, gpt-4o-mini)
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o
AZURE_OPENAI_CHAT_API_VERSION=2024-08-01-preview

# Text-to-Speech Model (e.g., gpt-4o-mini-tts)
AZURE_OPENAI_TTS_DEPLOYMENT=gpt-4o-mini-tts
AZURE_OPENAI_TTS_API_VERSION=2025-03-01-preview

# =============================================================================
# ELEVENLABS CONFIGURATION (Optional)
# =============================================================================
# Enable ElevenLabs instead of Azure TTS (true/false)
USE_ELEVENLABS=false

# Your ElevenLabs API key (if USE_ELEVENLABS=true)
ELEVENLABS_API_KEY=

# ElevenLabs voice IDs per niche (if USE_ELEVENLABS=true)
ELEVENLABS_VOICE_ID_SCARY=
ELEVENLABS_VOICE_ID_FINANCE=
ELEVENLABS_VOICE_ID_LUXURY=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable JSON structured logging (true for production, false for development)
LOG_JSON_FORMAT=false

# Base directory for output files (defaults to ./output)
OUTPUT_BASE_DIR=

# Enable debug mode (additional logging, no API call caching)
DEBUG=false

# =============================================================================
# FFMPEG CONFIGURATION
# =============================================================================
# Path to FFmpeg binary (leave empty to use system PATH)
FFMPEG_PATH=

# Path to FFprobe binary (leave empty to use system PATH)
FFPROBE_PATH=

# =============================================================================
# REDDIT API (Optional - for authenticated scraping)
# =============================================================================
# Reddit API credentials (for higher rate limits)
# Get these from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=FacelessContent/1.0

# =============================================================================
# PROCESSING SETTINGS
# =============================================================================
# Maximum concurrent API requests (general)
MAX_CONCURRENT_REQUESTS=5

# Maximum concurrent image generation requests
MAX_CONCURRENT_IMAGES=10

# Maximum concurrent TTS (text-to-speech) requests
MAX_CONCURRENT_TTS=10

# Maximum concurrent video scene rendering (FFmpeg processes)
# Keep lower than other values as FFmpeg is CPU-intensive
MAX_CONCURRENT_VIDEOS=4

# Request timeout in seconds
REQUEST_TIMEOUT=120

# Enable automatic retry on failure
ENABLE_RETRY=true

# Maximum retry attempts
MAX_RETRIES=3

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable checkpointing for resumable jobs
ENABLE_CHECKPOINTING=true

# Enable thumbnail generation
ENABLE_THUMBNAILS=true

# Enable subtitle generation
ENABLE_SUBTITLES=true